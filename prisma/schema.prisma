generator client {
    provider        = "prisma-client-js"
    previewFeatures = []
}

datasource db {
    provider  = "postgresql"
    url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
    directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Party {
    abbreviation String       @id
    name         String
    standpoints  Standpoint[]
}

model Subject {
    name                    String       @id
    relatedSubjects         Subject[]    @relation("SubjectRelatedSubjects")
    relatedSubjectsRelation Subject[]    @relation("SubjectRelatedSubjects")
    standpoints             Standpoint[]
}

model Standpoint {
    link              String   @id
    title             String
    content           String[]
    updateDate        DateTime @default(now())
    // Party relation
    party             Party    @relation(fields: [partyAbbreviation], references: [abbreviation])
    partyAbbreviation String
    // Subject relation
    subject           Subject? @relation(fields: [subjectName], references: [name])
    subjectName       String?
}
